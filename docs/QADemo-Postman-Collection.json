    {
      "name": "Test Scenarios",
      "item": [
        {
          "name": "Scenario: Complete Order Flow",
          "item": [
            {
              "name": "1. Login",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "const response = pm.response.json();",
                      "pm.collectionVariables.set('accessToken', response.data.accessToken);"
                    ]
                  }
                }
              ],
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\"username\":\"standard_user\",\"password\":\"password123\"}"
                },
                "url": {
                  "raw": "{{baseUrl}}/auth/login",
                  "host": ["{{baseUrl}}"],
                  "path": ["auth", "login"]
                }
              }
            },
            {
              "name": "2. Check Product Availability",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "const response = pm.response.json();",
                      "pm.test('Product is available', () => {",
                      "    pm.expect(response.data.stock).to.be.above(0);",
                      "    pm.expect(response.data.isActive).to.be.true;",
                      "});"
                    ]
                  }
                }
              ],
              "request": {
                "method": "GET",
                "url": {
                  "raw": "{{baseUrl}}/products/id/1",
                  "host": ["{{baseUrl}}"],
                  "path": ["products", "id", "1"]
                }
              }
            },
            {
              "name": "3. Get User Orders",
              "request": {
                "auth": {
                  "type": "bearer",
                  "bearer": [
                    {
                      "key": "token",
                      "value": "{{accessToken}}",
                      "type": "string"
                    }
                  ]
                },
                "method": "GET",
                "url": {
                  "raw": "{{baseUrl}}/orders",
                  "host": ["{{baseUrl}}"],
                  "path": ["orders"]
                }
              }
            }
          ]
