              "raw": "{{baseUrl}}/orders/1",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "1"]
            }
          }
        },
        {
          "name": "Place Order (Checkout)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "{{userBasicAuth}}"
              },
              {
                "key": "X-Session-ID",
                "value": "{{sessionId}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"shipping\": {\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"address\": \"123 Test St, City, State 12345\"\n  },\n  \"payment\": {\n    \"cardNumber\": \"4242424242424242\",\n    \"expiry\": \"12/26\",\n    \"cvv\": \"123\",\n    \"nameOnCard\": \"John Doe\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/orders",
              "host": ["{{baseUrl}}"],
              "path": ["orders"]
            }
          }
        }
      ]
    },
